# Threadspace Environment Configuration

# System Configuration
THREADSPACE_ENV=development  # development, testing, production
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
DEBUG_MODE=false

# Core System
SYSTEM_NAME=threadspace
SYSTEM_VERSION=0.1.0
MAX_THREADS=100
THREAD_TIMEOUT=300
HEALTH_CHECK_INTERVAL=60

# Memory Management
MEMORY_STORE_PATH=./data/memory
MAX_MEMORY_SIZE=1024  # MB
MEMORY_CLEANUP_INTERVAL=3600  # seconds
MEMORY_RETENTION_PERIOD=604800  # 7 days in seconds

# Plugin System
PLUGIN_DIR=./plugins
PLUGIN_TIMEOUT=30
PLUGIN_MAX_MEMORY=256  # MB per plugin
ENABLE_PLUGIN_SANDBOX=true

# Agents Configuration
VESTIGE_PATTERN_LIMIT=1000
AXIS_DECISION_CACHE_SIZE=100
ECHOFORM_HISTORY_SIZE=1000

# Security
ENABLE_SECURITY_CHECKS=true
AUTH_TOKEN_EXPIRY=3600
MAX_LOGIN_ATTEMPTS=3
PASSWORD_MIN_LENGTH=12

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
ENABLE_TRACING=false
TRACE_SAMPLE_RATE=0.1

# Database
DB_TYPE=sqlite  # sqlite, postgresql
DB_PATH=./data/threadspace.db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=threadspace
DB_USER=threadspace
DB_PASSWORD=change_me

# API Configuration
API_HOST=localhost
API_PORT=8000
API_WORKERS=4
API_TIMEOUT=30
ENABLE_CORS=false
ALLOWED_ORIGINS=http://localhost:3000

# Cache
CACHE_TYPE=memory  # memory, redis
CACHE_HOST=localhost
CACHE_PORT=6379
CACHE_TTL=3600

# Logging
LOG_FORMAT=json  # json, text
LOG_FILE=./logs/threadspace.log
LOG_ROTATION=daily  # never, daily, weekly, monthly
LOG_BACKUP_COUNT=30

# Development
DEV_AUTO_RELOAD=true
DEV_MOCK_SERVICES=false
PROFILE_ENABLED=false

# Testing
TEST_COVERAGE_MIN=80
TEST_TIMEOUT=30
TEST_DB_PATH=:memory:

# Documentation
DOCS_AUTO_BUILD=false
DOCS_OUTPUT_DIR=./site

# Feature Flags
FEATURE_ADVANCED_PATTERNS=true
FEATURE_EXPERIMENTAL_AGENTS=false
FEATURE_BETA_PLUGINS=false

# Performance
THREAD_POOL_SIZE=10
ASYNC_WORKERS=4
BATCH_SIZE=100
QUEUE_MAX_SIZE=1000

# Notifications
ENABLE_NOTIFICATIONS=true
NOTIFICATION_SENDER=noreply@threadspace.ai
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=smtp_user
SMTP_PASSWORD=change_me

# Integration Points
ENABLE_WEBHOOKS=false
WEBHOOK_TIMEOUT=10
WEBHOOK_RETRY_COUNT=3
WEBHOOK_RETRY_DELAY=5

# Resource Limits
CPU_LIMIT=80  # percentage
MEMORY_LIMIT=80  # percentage
DISK_USAGE_LIMIT=90  # percentage
IOPS_LIMIT=1000

# Cleanup
CLEANUP_ENABLED=true
CLEANUP_INTERVAL=86400  # 24 hours in seconds
LOG_RETENTION_DAYS=30
TEMP_FILE_TTL=3600

# Custom Paths
CUSTOM_PLUGIN_PATH=
CUSTOM_CONFIG_PATH=
CUSTOM_TEMPLATE_PATH=

# Advanced Features
ENABLE_JIT=false
ENABLE_GPU_ACCELERATION=false
ENABLE_DISTRIBUTED_MODE=false
CLUSTER_NODES=1

# DO NOT EDIT BELOW THIS LINE
# System-managed settings
INSTANCE_ID=
STARTUP_TIME=
LAST_UPGRADE=
